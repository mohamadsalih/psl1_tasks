#include<bits/stdc++.h>
using namespace std;
int main();
double square(double n)
{
    return n*n;
}
double subtract(double a,double b)
{
    return a-b;
}
void enc(vector<int> &v)
{
    for(int i=0;i<v.size();i++)
    {
        v[i]=square(v[i]);
        v[i]=subtract(v[i],i);
    }
}
int main()
{
    vector<int> v;
    for(int i=0;i<7;i++)
    {
        v.push_back(rand()%10);
    }
    cout<<"the natural data : ";
    for(auto e : v)
    {
        cout<<e<<" ";
    }
    cout<<endl;
    enc(v);
    cout<<"the encribted data : ";
    for(auto e : v)
    {
        cout<<e<<" ";
    }
    cout<<endl;
}
